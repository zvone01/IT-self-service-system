@model IT_self_service_system.Models.SolutionListViewModel
@{
    ViewBag.Title = "Index";
}
<br />
<div class="row">
    <form action="/Solution/Result" method="post" role="form">
        <div class="input-group">
            <input type="text" name="q" id="q" class="form-control" placeholder="Search">
            <div class="input-group-btn">
                <button class="btn btn-default" type="submit">
                    <i class="glyphicon glyphicon-search"></i>
                </button>
            </div>
        </div>
    </form>
</div>
<h2>Search result</h2>

@foreach (var s in Model.listSolution)
{<div class="row">

        <div class="col-md-1">
            <h1> @s.reputation </h1>
        </div>
        <div class="col-md-11">
            <a href="index?id=@s.Id"><h3 class="media-heading">@s.title</h3> </a>
            
            <h4 class="media-heading">@s.category.Name</h4>
            <p>@Html.Raw(String.Join(" ", s.description.Replace(Environment.NewLine, "<br/>").Split(' ').Take(250))) ...</p>
        </div>
    </div>
    <hr />
}

